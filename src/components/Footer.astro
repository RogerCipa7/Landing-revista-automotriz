---
const catalogoLinks = [
  { name: 'Lamborghini Urus S',       href: '#catalogo' },
  { name: 'Ferrari 296 GTB',          href: '#catalogo' },
  { name: 'BMW M5 Competition',       href: '#catalogo' },
  { name: 'Porsche Taycan Turbo S',   href: '#catalogo' },
  { name: 'Mercedes-AMG GT 63',       href: '#catalogo' },
  { name: 'McLaren 750S',             href: '#catalogo' },
];

const footerLinks = {
  recursos: ['Catálogo Digital', 'Comparador', 'Financiamiento', 'Test Drive', 'Mantenimiento', 'Garantías'],
  compania: ['Sobre Nosotros', 'Noticias', 'Carreras', 'Concesionarios', 'Contacto', 'Privacidad'],
};
---

<footer id="contacto" class="bg-white border-t border-gray-200 text-gray-900 py-16">
  <div class="w-full px-6 lg:px-12 xl:px-24">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">

      {/* Columna suscripción / contacto */}
      <div>
        <h3 class="font-serif text-3xl font-bold mb-2 text-gray-900 leading-tight">
          Mantente<span class="text-red-600">Conectado</span>
        </h3>
        <p class="text-gray-500 text-sm mb-6 leading-relaxed">
          Suscríbete para recibir las últimas noticias, lanzamientos exclusivos y ofertas especiales.
        </p>

        <form id="contact-form" novalidate class="space-y-3">
          <div>
            <input
              id="form-name"
              type="text"
              name="nombre"
              placeholder="Tu nombre"
              autocomplete="given-name"
              required
              class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500/30 focus:border-red-500 text-gray-900 placeholder-gray-400 text-sm transition-all"
            />
            <p class="field-error hidden text-red-500 text-xs mt-1 pl-1">Ingresa tu nombre</p>
          </div>

          <div>
            <input
              id="form-email"
              type="email"
              name="email"
              placeholder="tu@email.com"
              autocomplete="email"
              required
              class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500/30 focus:border-red-500 text-gray-900 placeholder-gray-400 text-sm transition-all"
            />
            <p class="field-error hidden text-red-500 text-xs mt-1 pl-1">Ingresa un email válido</p>
          </div>

          <button
            id="form-submit"
            type="submit"
            class="w-full bg-red-600 text-white py-3 rounded-lg text-sm font-semibold uppercase tracking-wide hover:bg-red-700 active:scale-[0.98] transition-all duration-200 flex items-center justify-center gap-2"
          >
            <span id="btn-label">Suscribirse</span>
            <svg id="btn-spinner" class="hidden w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8z"/>
            </svg>
          </button>

          {/* Mensaje de éxito */}
          <div id="form-success" class="hidden items-center gap-2 bg-green-50 border border-green-200 rounded-lg px-4 py-3">
            <svg class="w-4 h-4 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <p class="text-green-700 text-sm font-medium">¡Suscripción exitosa! Gracias.</p>
          </div>
        </form>
      </div>

      {/* Catálogo */}
      <div>
        <h4 class="font-semibold text-sm uppercase tracking-widest text-gray-900 mb-5 pb-2 border-b border-gray-100">
          Catálogo
        </h4>
        <ul class="space-y-3">
          {catalogoLinks.map((item) => (
            <li>
              <a href={item.href} class="text-gray-500 hover:text-red-600 transition-colors text-sm">
                {item.name}
              </a>
            </li>
          ))}
          <li>
            <a href="#catalogo" class="text-red-600 hover:text-red-700 font-medium text-sm inline-flex items-center gap-1 group">
              Ver todos
              <svg class="w-3.5 h-3.5 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </li>
        </ul>
      </div>

      {/* Recursos */}
      <div>
        <h4 class="font-semibold text-sm uppercase tracking-widest text-gray-900 mb-5 pb-2 border-b border-gray-100">
          Recursos
        </h4>
        <ul class="space-y-3">
          {footerLinks.recursos.map((link) => (
            <li>
              <a href="#" class="text-gray-500 hover:text-red-600 transition-colors text-sm">{link}</a>
            </li>
          ))}
        </ul>
      </div>

      {/* Compañía */}
      <div>
        <h4 class="font-semibold text-sm uppercase tracking-widest text-gray-900 mb-5 pb-2 border-b border-gray-100">
          Compañía
        </h4>
        <ul class="space-y-3">
          {footerLinks.compania.map((link) => (
            <li>
              <a href="#" class="text-gray-500 hover:text-red-600 transition-colors text-sm">{link}</a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    {/* Bottom bar */}
    <div class="border-t border-gray-100 pt-8 flex flex-col sm:flex-row justify-between items-center gap-4">
      <a href="/" class="flex items-center space-x-3 flex-shrink-0">

        <span class="font-serif text-lg font-bold text-gray-900 tracking-tight">
          REVISTA<span class="text-red-600">AUTOMOTRIZ</span>
        </span>
      </a>

      <p class="text-gray-400 text-xs tracking-wide text-center">
        © 2025 Revista Automotriz. Todos los derechos reservados.
      </p>

      <div class="flex space-x-5">
        <a href="https://www.linkedin.com/in/roger-cipagauta-b1626b329/" target="_blank" rel="noopener noreferrer"
          class="text-gray-400 hover:text-blue-600 transition-colors" aria-label="LinkedIn">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>
        </a>
        <a href="https://github.com/rogercipa7" target="_blank" rel="noopener noreferrer"
          class="text-gray-400 hover:text-gray-900 transition-colors" aria-label="GitHub">
