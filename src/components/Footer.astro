          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

<script>
  const form        = document.getElementById('contact-form') as HTMLFormElement | null;
  const nameInput   = document.getElementById('form-name')    as HTMLInputElement | null;
  const emailInput  = document.getElementById('form-email')   as HTMLInputElement | null;
  const submitBtn   = document.getElementById('form-submit');
  const btnLabel    = document.getElementById('btn-label');
  const btnSpinner  = document.getElementById('btn-spinner');
  const successMsg  = document.getElementById('form-success');

  function showError(input: HTMLInputElement | null) {
    if (!input) return;
    input.classList.add('border-red-400', 'bg-red-50');
    input.classList.remove('border-gray-200', 'bg-gray-50');
    input.nextElementSibling?.classList.remove('hidden');
  }

  function clearError(input: HTMLInputElement | null) {
    if (!input) return;
    input.classList.remove('border-red-400', 'bg-red-50');
    input.classList.add('border-gray-200', 'bg-gray-50');
    input.nextElementSibling?.classList.add('hidden');
  }

  // Validación en tiempo real
  nameInput?.addEventListener('input', () => {
    if (nameInput.value.trim().length > 0) clearError(nameInput);
  });
  emailInput?.addEventListener('input', () => {
    if (/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(emailInput.value)) clearError(emailInput);
  });

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    let valid = true;

    if (!nameInput?.value.trim()) {
      showError(nameInput);
      valid = false;
    } else {
      clearError(nameInput);
    }

    const emailOk = emailInput && /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(emailInput.value);
    if (!emailOk) {
      showError(emailInput);
      valid = false;
    } else {
      clearError(emailInput);
    }

    if (!valid) return;

    // Simular envío
    btnLabel?.classList.add('hidden');
    btnSpinner?.classList.remove('hidden');
    submitBtn?.setAttribute('disabled', 'true');

    await new Promise(r => setTimeout(r, 1200));

    btnLabel?.classList.remove('hidden');
    btnSpinner?.classList.add('hidden');
    submitBtn?.removeAttribute('disabled');

    // Mostrar éxito y limpiar
    form.reset();
    successMsg?.classList.remove('hidden');
    successMsg?.classList.add('flex');

    setTimeout(() => {
      successMsg?.classList.add('hidden');
      successMsg?.classList.remove('flex');
    }, 4000);
  });
</script>