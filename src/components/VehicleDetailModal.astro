<div id="vehicleModal" class="fixed inset-0 z-[200] hidden">
  <!-- Overlay -->
  <div
    id="modalOverlay"
    class="absolute inset-0 bg-black/75 backdrop-blur-md opacity-0 transition-opacity duration-300"
    onclick="closeVehicleModal()"
  ></div>

  <!-- Panel centrado -->
  <div class="absolute inset-0 flex items-center justify-center p-4 pointer-events-none">
    <div
      id="modalCard"
      class="pointer-events-auto relative w-full max-w-4xl bg-white rounded-3xl shadow-2xl overflow-hidden scale-95 opacity-0 transition-all duration-300 ease-out max-h-[92vh] flex flex-col"
      onclick="event.stopPropagation()"
    >

      <!-- Botón cerrar -->
      <button
        onclick="closeVehicleModal()"
        class="absolute top-4 right-4 z-30 w-9 h-9 rounded-full bg-black/40 backdrop-blur text-white hover:bg-red-600 flex items-center justify-center transition-all duration-200 shadow-lg"
        aria-label="Cerrar"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>

      <!-- Hero imagen -->
      <div class="relative h-56 sm:h-72 md:h-80 flex-shrink-0 overflow-hidden">
        <img id="modalImage" src="" alt="" class="w-full h-full object-cover"/>
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/30 to-transparent"></div>

        <!-- Badges -->
        <div class="absolute top-5 left-5 flex gap-2 z-10">
          <span id="modalType" class="px-3 py-1 bg-white/90 backdrop-blur rounded-full text-[10px] font-bold text-gray-900 uppercase tracking-widest"></span>
          <span id="modalYear" class="px-3 py-1 bg-red-600 rounded-full text-[10px] font-bold text-white uppercase tracking-widest"></span>
        </div>

        <!-- Nombre + precio sobre la imagen -->
        <div class="absolute bottom-5 left-6 right-6 z-10">
          <h3 id="modalName" class="font-serif text-2xl sm:text-4xl md:text-5xl font-black text-white leading-tight mb-1"></h3>
          <p id="modalPrice" class="text-lg font-bold text-red-400"></p>
        </div>
      </div>

      <!-- Cuerpo con scroll -->
      <div class="overflow-y-auto flex-1 scrollbar-thin">
        <div class="p-6 md:p-8 space-y-8">

          <!-- Descripción + botón YouTube -->
          <div class="flex flex-col sm:flex-row sm:items-start gap-5">
            <p id="modalDescription" class="text-gray-600 leading-relaxed text-sm sm:text-base flex-1"></p>
            <a
              id="youtubeBtn"
              href="#"
              target="_blank"
              rel="noopener noreferrer"
              class="hidden flex-shrink-0 inline-flex items-center gap-2.5 px-5 py-3 bg-[#FF0000] hover:bg-[#cc0000] text-white rounded-xl font-semibold text-sm transition-all duration-200 shadow-md hover:shadow-lg hover:scale-[1.03] self-start"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.376.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.376-.505a3.016 3.016 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
              Ver review
            </a>
          </div>

          <!-- Specs rápidas -->
          <div class="bg-gray-50 rounded-2xl px-5 py-4 flex items-center gap-3">
            <svg class="w-4 h-4 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            <p id="modalSpecs" class="text-gray-700 text-sm font-medium"></p>
          </div>

          <!-- Grid técnico -->
          <div id="technicalContainer">
            <h4 class="text-xs font-bold uppercase tracking-[0.2em] text-gray-400 mb-4">Datos Técnicos</h4>
            <div id="technicalGrid" class="grid grid-cols-2 sm:grid-cols-3 gap-3"></div>
          </div>

          <!-- Equipamiento -->
          <div id="featuresContainer">
            <h4 class="text-xs font-bold uppercase tracking-[0.2em] text-gray-400 mb-4">Equipamiento</h4>
            <div id="featuresList" class="flex flex-wrap gap-2"></div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>

<style>
  .scrollbar-thin {
    scrollbar-width: thin;
    scrollbar-color: #e5e7eb #f9fafb;
  }
  .scrollbar-thin::-webkit-scrollbar { width: 5px; }
  .scrollbar-thin::-webkit-scrollbar-track { background: #f9fafb; }
  .scrollbar-thin::-webkit-scrollbar-thumb { background: #e5e7eb; border-radius: 99px; }
  .scrollbar-thin::-webkit-scrollbar-thumb:hover { background: #d1d5db; }
</style>

<script>
  function openVehicleModal(vehicle) {
    const modal   = document.getElementById('vehicleModal');
    const overlay = document.getElementById('modalOverlay');
    const card    = document.getElementById('modalCard');

    // Datos básicos
    document.getElementById('modalImage').src       = vehicle.image || '';
    document.getElementById('modalImage').alt       = vehicle.name  || '';
    document.getElementById('modalType').textContent  = vehicle.type  || '';
    document.getElementById('modalYear').textContent  = vehicle.year  || '';
    document.getElementById('modalName').textContent  = vehicle.name  || '';
    document.getElementById('modalPrice').textContent = vehicle.price || '';
    document.getElementById('modalDescription').textContent = vehicle.description || '';
    document.getElementById('modalSpecs').textContent = vehicle.specs || '';

    // YouTube
    const ytBtn = document.getElementById('youtubeBtn');
    if (vehicle.youtubeUrl) {
      ytBtn.href = vehicle.youtubeUrl;
      ytBtn.classList.remove('hidden');
      ytBtn.classList.add('inline-flex');
    } else {
      ytBtn.classList.add('hidden');
      ytBtn.classList.remove('inline-flex');
    }

    // Datos técnicos
    const techGrid = document.getElementById('technicalGrid');
    techGrid.innerHTML = '';
    if (vehicle.technical) {
      const fields = [
        ['Motor',       vehicle.technical.engine],
        ['Potencia',    vehicle.technical.power],
        ['Torque',      vehicle.technical.torque],
        ['Transmisión', vehicle.technical.transmission],
        ['Tracción',    vehicle.technical.drivetrain],
        ['0–100 km/h',  vehicle.technical.acceleration],
        ['Vel. Máx.',   vehicle.technical.topSpeed],
        ['Combustible', vehicle.technical.fuel],
        ['Peso',        vehicle.technical.weight],
      ];
      fields.forEach(([label, value]) => {
        const el = document.createElement('div');
        el.className = 'bg-gray-50 hover:bg-red-50 rounded-xl p-4 text-center transition-colors duration-200 group/tech';
        el.innerHTML = `
          <p class="text-[10px] text-gray-400 uppercase tracking-wider mb-1.5 group-hover/tech:text-red-500 transition-colors">${label}</p>
          <p class="font-bold text-gray-900 text-sm leading-snug">${value}</p>
        `;
        techGrid.appendChild(el);
      });
      document.getElementById('technicalContainer').style.display = 'block';
    } else {
      document.getElementById('technicalContainer').style.display = 'none';
    }

    // Características
    const list = document.getElementById('featuresList');
    list.innerHTML = '';
    if (vehicle.features?.length) {
      vehicle.features.forEach(f => {
        const s = document.createElement('span');
        s.className = 'inline-flex items-center gap-1.5 px-4 py-2 bg-gray-100 hover:bg-red-50 text-gray-700 hover:text-red-700 rounded-full text-xs font-semibold transition-colors duration-200 cursor-default';
        s.innerHTML = `<span class="w-1.5 h-1.5 rounded-full bg-red-500 flex-shrink-0"></span>${f}`;
        list.appendChild(s);
      });
      document.getElementById('featuresContainer').style.display = 'block';
    } else {
      document.getElementById('featuresContainer').style.display = 'none';
    }

    // Mostrar
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    requestAnimationFrame(() => {
      overlay.classList.remove('opacity-0');
      overlay.classList.add('opacity-100');
      card.classList.remove('scale-95', 'opacity-0');
      card.classList.add('scale-100', 'opacity-100');
    });
  }

  function closeVehicleModal() {
    const modal   = document.getElementById('vehicleModal');
    const overlay = document.getElementById('modalOverlay');
    const card    = document.getElementById('modalCard');

    overlay.classList.remove('opacity-100');
    overlay.classList.add('opacity-0');
    card.classList.remove('scale-100', 'opacity-100');
    card.classList.add('scale-95', 'opacity-0');

    setTimeout(() => {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }, 300);
  }

  window.closeVehicleModal = closeVehicleModal;

  document.addEventListener('openVehicleModal', (e) => openVehicleModal(e.detail.vehicle));
  document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeVehicleModal(); });
</script>